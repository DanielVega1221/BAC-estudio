/* ===========================================
   BAC Estudio - Landing Page
   Diseño arquitectónico editorial
   =========================================== */

/* --- Importar tipografía Inter --- */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

/* --- Variables CSS --- */
:root {
  /* Paleta de colores - Tonos cálidos y suaves */
  --color-bg-warm: #FAF8F5;
  --color-bg-alternate: #F5F3F0;
  --color-bg-soft: #EDEBE7;
  --color-text-primary: #6B6B6B;
  --color-text-title: #3A3A3A;
  --color-text-light: #8B8986;
  --color-text-detail: #A8A5A0;
  --color-border: #DED9D3;
  --color-accent: #4A4745;
  
  /* Tipografía - Más dramática */
  --font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-size-base: 17px;
  --font-size-lg: 20px;
  --font-size-xl: 28px;
  --font-size-2xl: 42px;
  --font-size-3xl: 56px;
  --font-size-4xl: 80px;
  --font-size-hero: clamp(64px, 8vw, 120px);
  
  /* Espaciado */
  --spacing-xs: 8px;
  --spacing-sm: 16px;
  --spacing-md: 24px;
  --spacing-lg: 48px;
  --spacing-xl: 64px;
  --spacing-2xl: 96px;
  --spacing-3xl: 128px;
  
  /* Contenedor */
  --container-max: 1200px;
  --container-padding: 24px;
  
  /* Transiciones - sutiles y lentas */
  --transition-smooth: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-fast: all 0.4s ease-out;
}

/* --- Reset y Base --- */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Cursor personalizado sutil */
a, button, .project-item, .service-item, .team-member {
  cursor: pointer;
}

/* Selecci\u00f3n de texto personalizada */
::selection {
  background-color: var(--color-text-title);
  color: var(--color-bg-warm);
}

html {
  scroll-behavior: smooth;
  font-size: var(--font-size-base);
}

body {
  font-family: var(--font-family);
  color: var(--color-text-primary);
  background-color: var(--color-bg-warm);
  line-height: 1.8;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
  letter-spacing: 0.01em;
}

/* Animaci\u00f3n global suave para apariciones */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* --- Contenedor global --- */
.container {
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

/* --- Tipografía global --- */
h1, h2, h3, h4, h5, h6 {
  color: var(--color-text-title);
  font-weight: 500;
  line-height: 1.3;
  margin-bottom: var(--spacing-sm);
}

p {
  margin-bottom: var(--spacing-md);
}

/* --- Clases utilitarias de sección --- */
section {
  padding: var(--spacing-3xl) 0;
}

.section-number {
  font-size: 12px;
  font-weight: 600;
  letter-spacing: 3px;
  color: var(--color-text-detail);
  display: block;
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: var(--font-size-3xl);
  font-weight: 400;
  text-align: center;
  margin-bottom: var(--spacing-md);
  letter-spacing: -1px;
}

.section-title-large {
  font-size: var(--font-size-3xl);
  font-weight: 600;
  line-height: 1;
  letter-spacing: -2px;
  margin-bottom: var(--spacing-lg);
}

.section-intro {
  text-align: center;
  font-size: var(--font-size-lg);
  color: var(--color-text-primary);
  max-width: 720px;
  margin: 0 auto var(--spacing-2xl);
  line-height: 1.8;
}

.section-line {
  width: 60px;
  height: 1px;
  background-color: var(--color-text-title);
  margin-bottom: var(--spacing-lg);
}

.section-description {
  font-size: var(--font-size-lg);
  line-height: 1.6;
  color: #B0B0B0;
  max-width: 400px;
}

/* ===========================================
   RESPONSIVE DESIGN - Media Queries Globales
   =========================================== */

@media (max-width: 768px) {
  :root {
    --font-size-3xl: 36px;
    --font-size-4xl: 48px;
    --font-size-hero: 48px;
    --spacing-2xl: 64px;
    --spacing-3xl: 80px;
  }
  
  .section-title-large {
    font-size: 36px;
  }
}

@media (max-width: 480px) {
  :root {
    --font-size-2xl: 24px;
    --font-size-3xl: 28px;
    --font-size-4xl: 36px;
    --container-padding: 20px;
  }
  
  section {
    padding: var(--spacing-2xl) 0;
  }
  
  .section-title {
    font-size: var(--font-size-2xl);
  }
}
  content: '';
  position: absolute;
  top: 50%;
  right: -100px;
  width: 400px;
  height: 400px;
  background-image: url('./assets/logoBAC.png');
  background-size: contain;
  background-repeat: no-repeat;
  opacity: 0.02;
  transform: translateY(-50%) rotate(15deg);
  pointer-events: none;
  z-index: 0;
}

/* Grid arquitect\u00f3nico de fondo */
.hero-grid {
  position: absolute;
  inset: 0;
  z-index: 0;
}

.grid-vertical {
  position: absolute;
  left: 20%;
  top: 0;
  bottom: 0;
  width: 1px;
  background: linear-gradient(180deg, 
    transparent 0%, 
    var(--color-border) 20%, 
    var(--color-border) 80%, 
    transparent 100%
  );
  transform-origin: top;
}

.grid-horizontal {
  position: absolute;
  top: 30%;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, 
    transparent 0%, 
    var(--color-border) 20%, 
    var(--color-border) 80%, 
    transparent 100%
  );
  transform-origin: left;
}

.hero-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--container-padding);
  display: grid;
  grid-template-columns: 1.2fr 1fr;
  gap: var(--spacing-2xl);
  align-items: center;
  position: relative;
  z-index: 1;
}

/* Lado izquierdo */
.hero-left {
  position: relative;
}

.hero-number {
  font-size: 14px;
  font-weight: 600;
  letter-spacing: 4px;
  color: var(--color-text-light);
  margin-bottom: var(--spacing-lg);
  opacity: 0.6;
}

.hero-title {
  font-size: var(--font-size-hero);
  font-weight: 600;
  line-height: 0.95;
  color: var(--color-text-title);
  letter-spacing: -3px;
  margin-bottom: var(--spacing-xl);
}

.hero-title-emphasis {
  display: block;
  font-weight: 300;
  font-style: italic;
  color: var(--color-text-light);
  letter-spacing: -2px;
}

.hero-description {
  display: flex;
  gap: var(--spacing-md);
  margin-top: var(--spacing-2xl);
}

.hero-line-accent {
  width: 3px;
  background-color: var(--color-text-title);
  flex-shrink: 0;
}

.hero-lead {
  font-size: var(--font-size-xl);
  font-weight: 400;
  color: var(--color-text-primary);
  line-height: 1.4;
  margin-bottom: var(--spacing-sm);
}

.hero-sub {
  font-size: 15px;
  color: var(--color-text-light);
  letter-spacing: 1.5px;
  text-transform: uppercase;
  margin-bottom: var(--spacing-xs);
  font-weight: 500;
}

.hero-location {
  font-size: 15px;
  color: var(--color-text-detail);
  font-style: italic;
  margin: 0;
}

/* Lado derecho - Composici\u00f3n visual */
.hero-right {
  position: relative;
  height: 600px;
}

.hero-image-frame {
  position: relative;
  height: 100%;
}

.hero-image-main {
  position: absolute;
  top: 0;
  right: 0;
  width: 85%;
  height: 75%;
  background: linear-gradient(135deg, 
    #8B8986 0%, 
    #6B6B6B 50%, 
    #4A4745 100%
  );
  box-shadow: 
    15px 15px 40px rgba(0, 0, 0, 0.08);
}

.hero-image-main::before {
  content: '';
  position: absolute;
  inset: 0;
  background: 
    repeating-linear-gradient(
      45deg,
      transparent,
      transparent 50px,
      rgba(255,255,255,0.02) 50px,
      rgba(255,255,255,0.02) 51px
    );
}

.hero-image-accent {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60%;
  height: 50%;
  background: linear-gradient(135deg, 
    #D5D2CC 0%, 
    #C2BFB9 50%, 
    #B0ADA8 100%
  );
  border: 1px solid var(--color-border);
  box-shadow: 
    10px 10px 30px rgba(0, 0, 0, 0.06);
}

/* Scroll indicator */
.hero-scroll {
  position: absolute;
  bottom: 60px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
  z-index: 2;
}

.hero-scroll span {
  font-size: 10px;
  letter-spacing: 2px;
  text-transform: uppercase;
  color: var(--color-text-light);
  font-weight: 500;
  writing-mode: vertical-rl;
  transform: rotate(180deg);
}

.hero-scroll-line {
  width: 1px;
  background-color: var(--color-border);
}

/* --- Secciones --- */
section {
  padding: var(--spacing-3xl) 0;
}

.process {
  background-color: var(--color-bg-alternate);
}

.services {
  background-color: var(--color-bg-warm);
}

.projects {
  background-color: var(--color-bg-alternate);
}

.team {
  background-color: var(--color-bg-warm);
}

.contact {
  background-color: var(--color-bg-alternate);
}

/* --- Títulos de sección globales --- */
.section-title {
  font-size: var(--font-size-3xl);
  font-weight: 400;
  text-align: center;
  margin-bottom: var(--spacing-md);
  letter-spacing: -1px;
}

.section-intro {
  text-align: center;
  font-size: var(--font-size-lg);
  color: var(--color-text-primary);
  max-width: 720px;
  margin: 0 auto var(--spacing-2xl);
  line-height: 1.8;
}

/* --- Process Redise\u00f1ado --- */
.process {
  background-color: #F5F3F0;
  color: var(--color-text-title);
  padding: var(--spacing-3xl) 0;
  border-top: 1px solid var(--color-border);
  border-bottom: 1px solid var(--color-border);
}

.process-layout {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--container-padding);
  display: grid;
  grid-template-columns: 0.8fr 1.2fr;
  gap: var(--spacing-3xl);
  align-items: start;
}

.process-header {
  position: sticky;
  top: 120px;
}

.section-number {
  font-size: 12px;
  font-weight: 600;
  letter-spacing: 3px;
  color: var(--color-text-detail);
  display: block;
  margin-bottom: var(--spacing-md);
}

.process .section-number {
  color: var(--color-text-light);
}

.section-title-large {
  font-size: var(--font-size-3xl);
  font-weight: 600;
  line-height: 1;
  letter-spacing: -2px;
  margin-bottom: var(--spacing-lg);
}

.process .section-title-large {
  color: var(--color-text-title);
}

.section-line {
  width: 60px;
  height: 1px;
  background-color: var(--color-text-title);
  margin-bottom: var(--spacing-lg);
}

.section-description {
  font-size: var(--font-size-lg);
  line-height: 1.6;
  color: #B0B0B0;
  max-width: 400px;
}

.process .section-description {
  color: var(--color-text-primary);
}

.process-steps {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-2xl);
  padding-top: 40px;
}

.process-step {
  display: flex;
  gap: var(--spacing-lg);
  padding: var(--spacing-xl) var(--spacing-lg);
  border: 1px solid var(--color-border);
  transition: var(--transition-smooth);
  background: var(--color-bg-warm);
}

.process-step:hover {
  border-color: var(--color-text-light);
  background: #FFFFFF;
  transform: translateX(6px);
}

.step-number-large {
  font-size: 48px;
  font-weight: 300;
  color: rgba(58, 58, 58, 0.18);
  line-height: 1;
  flex-shrink: 0;
  font-style: italic;
  text-shadow: 0 0 20px rgba(58, 58, 58, 0.06);
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: var(--font-size-xl);
  font-weight: 500;
  margin-bottom: var(--spacing-sm);
  letter-spacing: -0.5px;
  color: var(--color-text-title);
}

.step-description {
  font-size: 16px;
  line-height: 1.8;
  color: var(--color-text-primary);
  margin: 0;
}

/* --- Services Rediseñado --- */
.services {
  background-color: var(--color-bg-alternate);
  padding: var(--spacing-3xl) 0;
}

.services-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.services-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-2xl);
  padding-bottom: var(--spacing-xl);
  border-bottom: 1px solid var(--color-border);
}

.services-intro {
  max-width: 450px;
  font-size: var(--font-size-lg);
  line-height: 1.6;
  color: var(--color-text-primary);
  margin: 0;
}

.services-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1px;
  background-color: var(--color-border);
}

.service-item {
  background-color: var(--color-bg-warm);
  padding: var(--spacing-2xl);
  display: flex;
  gap: var(--spacing-lg);
  transition: var(--transition-smooth);
  position: relative;
}

.service-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 100%;
  height: 100%;
  background-color: #4A4745;
  transition: right 0.8s cubic-bezier(0.22, 1, 0.36, 1);
  z-index: 0;
}

.service-item:hover::before {
  right: 0;
}

.service-item:hover .service-number,
.service-item:hover .service-name,
.service-item:hover .service-text {
  color: var(--color-bg-warm);
  position: relative;
  z-index: 1;
}

.service-number {
  font-size: 72px;
  font-weight: 300;
  color: var(--color-border);
  line-height: 1;
  font-style: italic;
  flex-shrink: 0;
  width: 100px;
  transition: var(--transition-smooth);
}

.service-content {
  flex: 1;
  position: relative;
  z-index: 1;
}

.service-name {
  font-size: var(--font-size-2xl);
  font-weight: 500;
  margin-bottom: var(--spacing-sm);
  letter-spacing: -0.5px;
  transition: var(--transition-smooth);
}

.service-text {
  font-size: 16px;
  line-height: 1.7;
  color: var(--color-text-primary);
  margin: 0;
  transition: var(--transition-smooth);
}

/* --- Projects Redise\u00f1ado --- */
.projects {
  background-color: var(--color-bg-warm);
  padding: var(--spacing-3xl) 0;
}

.projects-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.projects-intro {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: var(--spacing-2xl);
  padding-bottom: var(--spacing-xl);
  border-bottom: 1px solid var(--color-border);
}

.intro-left {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.intro-right {
  display: flex;
  align-items: center;
}

.projects-filters {
  display: flex;
  gap: 8px;
}

.filter-button {
  padding: 10px 20px;
  font-size: 13px;
  font-family: var(--font-family);
  color: var(--color-text-primary);
  background: transparent;
  border: 1px solid var(--color-border);
  cursor: pointer;
  transition: var(--transition-fast);
  letter-spacing: 0.5px;
  font-weight: 500;
}

.filter-button:hover {
  background-color: var(--color-text-title);
  color: var(--color-bg-warm);
  border-color: var(--color-text-title);
}

.filter-button.active {
  background-color: var(--color-text-title);
  color: var(--color-bg-warm);
  border-color: var(--color-text-title);
}

/* Grid Bento asim\u00e9trico */
.projects-grid-bento {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  grid-auto-rows: 280px;
  gap: 0;
  border: 1px solid var(--color-border);
  grid-auto-flow: dense;
}

/* Tamaños de proyecto */
.project-small { grid-column: span 2; grid-row: span 1; }
.project-medium { grid-column: span 2; grid-row: span 2; }
.project-large { grid-column: span 3; grid-row: span 2; }
.project-tall { grid-column: span 2; grid-row: span 2; }
.project-wide { grid-column: span 4; grid-row: span 1; }
.project-wide-tall { grid-column: span 4; grid-row: span 2; }

.project-item {
  position: relative;
  overflow: hidden;
  cursor: pointer;
  border-right: 1px solid var(--color-border);
  border-bottom: 1px solid var(--color-border);
}

.project-item:nth-child(6n) {
  border-right: none;
}

.project-content {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: var(--spacing-lg);
  background: linear-gradient(135deg, 
    #8B8986 0%, 
    #6B6B6B 50%, 
    #5A5A5A 100%
  );
  position: relative;
  transition: var(--transition-smooth);
}

.project-content::before {
  content: '';
  position: absolute;
  inset: 0;
  background: 
    repeating-linear-gradient(
      -45deg,
      transparent,
      transparent 80px,
      rgba(255,255,255,0.02) 80px,
      rgba(255,255,255,0.02) 81px
    );
  pointer-events: none;
}

.project-content:hover {
  transform: scale(1.02);
}

.project-visual {
  display: flex;
  justify-content: flex-end;
}

.project-number {
  font-size: 80px;
  font-weight: 300;
  color: rgba(255, 255, 255, 0.35);
  line-height: 1;
  font-style: italic;
  text-shadow: 0 2px 20px rgba(0, 0, 0, 0.25);
}

.project-details {
  color: var(--color-bg-warm);
}

.project-name {
  font-size: var(--font-size-xl);
  font-weight: 500;
  margin-bottom: 4px;
  letter-spacing: -0.5px;
  color: var(--color-bg-warm);
}

.project-place {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: var(--spacing-sm);
}

.project-category {
  display: inline-block;
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 1px;
  padding: 4px 10px;
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

/* --- Team Rediseñado --- */
.team {
  background-color: var(--color-bg-warm);
  padding: var(--spacing-3xl) 0;
}

.team-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.team-header {
  margin-bottom: var(--spacing-2xl);
}

.team-intro {
  font-size: var(--font-size-lg);
  line-height: 1.6;
  color: var(--color-text-primary);
  max-width: 600px;
  margin-top: var(--spacing-md);
}

.team-list {
  display: flex;
  flex-direction: column;
  gap: 1px;
  background-color: var(--color-border);
}

.team-member {
  display: grid;
  grid-template-columns: 400px 1fr;
  gap: var(--spacing-2xl);
  background-color: var(--color-bg-alternate);
  padding: var(--spacing-2xl);
  transition: var(--transition-smooth);
  cursor: pointer;
}

.team-member:hover {
  background-color: var(--color-bg-warm);
  transform: translateX(10px);
}

.team-member:hover .member-visual {
  transform: scale(1.02);
}

.member-visual {
  width: 100%;
  height: 300px;
  background: linear-gradient(135deg, 
    #A8A5A0 0%, 
    #8B8986 50%, 
    #6B6B6B 100%
  );
  position: relative;
}

.member-visual::before {
  content: '';
  position: absolute;
  inset: 0;
  background: 
    repeating-linear-gradient(
      90deg,
      transparent,
      transparent 60px,
      rgba(255,255,255,0.03) 60px,
      rgba(255,255,255,0.03) 61px
    );
}

.member-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: var(--spacing-lg) 0;
}

.member-area {
  font-size: var(--font-size-2xl);
  font-weight: 500;
  margin-bottom: var(--spacing-xs);
  letter-spacing: -0.5px;
}

.member-role {
  font-size: 16px;
  color: var(--color-text-light);
  margin-bottom: var(--spacing-md);
  font-weight: 500;
  letter-spacing: 0.5px;
}

.member-bio {
  font-size: 17px;
  line-height: 1.7;
  color: var(--color-text-primary);
  margin: 0;
  max-width: 600px;
}

/* --- Contact Mejorado --- */
.contact {
  background-color: #4A4745;
  color: var(--color-bg-warm);
}

.contact .section-title-large {
  color: var(--color-bg-warm);
}

.contact .section-description {
  color: var(--color-text-detail);
}

.contact-content {
  display: grid;
  grid-template-columns: 1fr 1.5fr;
  gap: var(--spacing-3xl);
  margin-top: var(--spacing-2xl);
  max-width: 1400px;
  margin-left: auto;
  margin-right: auto;
  padding: 0 var(--container-padding);
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-2xl);
  position: sticky;
  top: 120px;
}

.info-item {
  padding-bottom: var(--spacing-lg);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.info-item:last-child {
  border-bottom: none;
}

.info-title {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
  text-transform: uppercase;
  letter-spacing: 1.5px;
  color: var(--color-text-detail);
}

.info-text {
  font-size: 18px;
  margin-bottom: 6px;
  color: var(--color-bg-warm);
  font-weight: 400;
}

.contact-form {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.form-group {
  display: flex;
  flex-direction: column;
}

.form-group label {
  font-size: 14px;
  color: var(--color-text-detail);
  margin-bottom: var(--spacing-xs);
  font-weight: 500;
}

.form-group label {
  color: var(--color-text-detail);
}

.form-group input,
.form-group textarea {
  padding: 18px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 0;
  font-size: 16px;
  font-family: var(--font-family);
  color: var(--color-bg-warm);
  background-color: rgba(255, 255, 255, 0.05);
  transition: var(--transition-fast);
}

.form-group input:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--color-bg-warm);
  background-color: rgba(255, 255, 255, 0.08);
}

.form-group textarea {
  min-height: 140px;
  resize: vertical;
}

.submit-button {
  padding: 20px 60px;
  background-color: var(--color-bg-warm);
  color: var(--color-text-title);
  border: none;
  border-radius: 0;
  font-size: 13px;
  font-family: var(--font-family);
  font-weight: 600;
  letter-spacing: 2px;
  text-transform: uppercase;
  cursor: pointer;
  transition: var(--transition-smooth);
  align-self: flex-start;
  position: relative;
  overflow: hidden;
}

.submit-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 0;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.2);
  transition: width 0.4s ease;
}

.submit-button:hover::before {
  width: 100%;
}

.submit-button:hover {
  transform: translateX(10px);
}

/* --- Footer --- */
.footer {
  background-color: #3A3A3A;
  color: var(--color-bg-warm);
  padding: var(--spacing-2xl) 0 var(--spacing-lg);
}

.footer .footer-title,
.footer .footer-subtitle,
.footer .footer-text {
  color: var(--color-bg-warm);
}

.footer .footer-text {
  opacity: 0.7;
}

.footer .footer-copyright {
  color: rgba(255, 255, 255, 0.5);
}

.footer .footer-bottom {
  border-top-color: rgba(255, 255, 255, 0.1);
}

.footer-content {
  display: grid;
  grid-template-columns: 1.5fr 1fr 1fr;
  gap: var(--spacing-2xl);
  margin-bottom: var(--spacing-2xl);
  align-items: start;
}

@media (max-width: 768px) {
  .footer-content {
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
  }
}

.footer-section {
}

.footer-brand {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.footer-logo {
  width: 180px;
  height: auto;
  filter: brightness(0) invert(1);
  opacity: 0.9;
  object-fit: contain;
}

.footer-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
}

.footer-subtitle {
  font-size: 13px;
  font-weight: 600;
  margin-bottom: var(--spacing-md);
  text-transform: uppercase;
  letter-spacing: 1.5px;
  opacity: 0.7;
}

.footer-text {
  font-size: 14px;
  margin-bottom: 8px;
  line-height: 1.6;
}

.footer-link {
  display: block;
  font-size: 14px;
  color: var(--color-bg-warm);
  text-decoration: none;
  margin-bottom: 8px;
  opacity: 0.9;
  transition: var(--transition-fast);
  line-height: 1.6;
}

.footer-link:hover {
  opacity: 1;
  transform: translateX(4px);
}

.footer-bottom {
  text-align: center;
  padding-top: var(--spacing-lg);
  border-top: 1px solid var(--color-border);
}

.footer-copyright {
  font-size: 14px;
  color: var(--color-text-detail);
  margin: 0;
}

/* ===========================================
   RESPONSIVE DESIGN
   =========================================== */

/* Tablets */
@media (max-width: 1024px) {
  .hero-container {
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
  }
  
  .hero-right {
    height: 400px;
  }
  
  .process-layout {
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
  }
  
  .process-header {
    position: static;
  }
  
  .projects-grid-bento {
    grid-template-columns: repeat(2, 1fr);
    grid-auto-rows: 250px;
  }
  
  .project-item-1,
  .project-item-2,
  .project-item-3,
  .project-item-4,
  .project-item-5,
  .project-item-6 {
    grid-column: span 1;
    grid-row: span 1;
  }
  
  .services-list {
    grid-template-columns: 1fr;
  }
  
  .team-member {
    grid-template-columns: 1fr;
  }
  
  .member-visual {
    height: 400px;
  }
  
  .contact-content {
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
  }
  
  .contact-info {
    position: static;
  }
}

@media (max-width: 768px) {
  :root {
    --font-size-3xl: 36px;
    --font-size-4xl: 48px;
    --font-size-hero: 48px;
    --spacing-2xl: 64px;
    --spacing-3xl: 80px;
  }
  
  .intro-logo {
    width: 200px;
  }
  
  .header-container {
    position: relative;
  }
  
  .menu-toggle {
    display: flex;
  }
  
  .nav {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    flex-direction: column;
    background-color: var(--color-bg-warm);
    border-bottom: 1px solid var(--color-border);
    padding: var(--spacing-md) var(--container-padding);
    gap: var(--spacing-md);
    opacity: 0;
    pointer-events: none;
    transform: translateY(-10px);
    transition: var(--transition-fast);
  }
  
  .nav.open {
    opacity: 1;
    pointer-events: all;
    transform: translateY(0);
  }
  
  .hero {
    padding: 100px 0 60px;
  }
  
  .hero-number {
    font-size: 12px;
  }
  
  .hero-title {
    font-size: var(--font-size-hero);
    letter-spacing: -2px;
  }
  
  .hero-right {
    height: 300px;
  }
  
  .hero-scroll {
    bottom: 30px;
  }
  
  .section-title-large {
    font-size: 36px;
  }
  
  .projects-intro {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--spacing-md);
  }
  
  .projects-grid-bento {
    grid-template-columns: 1fr;
    grid-auto-rows: 280px;
  }
  
  .service-item {
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .service-number {
    font-size: 48px;
  }
  
  .team-member {
    padding: var(--spacing-md);
  }
  
  .member-visual {
    height: 300px;
  }
}

/* ===========================================
   MODALES (Proyectos y Equipo)
   =========================================== */
.modal-overlay {
  position: fixed;
  inset: 0;
  background-color: rgba(58, 58, 58, 0.95);
  backdrop-filter: blur(12px);
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  overflow-y: auto;
}

.modal-content {
  position: relative;
  background-color: var(--color-bg-warm);
  max-width: 1200px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  border-radius: 0;
  box-shadow: 0 40px 100px rgba(0, 0, 0, 0.3);
}

.modal-close {
  position: absolute;
  top: var(--spacing-lg);
  right: var(--spacing-lg);
  background: transparent;
  border: 1px solid var(--color-border);
  color: var(--color-text-primary);
  padding: 12px 24px;
  cursor: pointer;
  font-size: 14px;
  font-weight: 400;
  letter-spacing: 0.5px;
  display: flex;
  align-items: center;
  gap: 12px;
  transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
  z-index: 10;
}

.modal-close:hover {
  background-color: var(--color-text-title);
  color: var(--color-bg-warm);
  border-color: var(--color-text-title);
}

.modal-body {
  display: grid;
  grid-template-columns: 1fr 1fr;
  min-height: 600px;
}

.modal-visual {
  background: linear-gradient(135deg, #EDEBE7 0%, #D4D2CE 100%);
  position: relative;
  min-height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-image-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #C5C3BF 0%, #A8A6A2 100%);
  position: relative;
}

.modal-image-placeholder::after {
  content: 'Imagen del proyecto';
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 14px;
  letter-spacing: 1px;
  text-transform: uppercase;
}

.modal-info {
  padding: var(--spacing-2xl);
  display: flex;
  flex-direction: column;
}

.modal-meta {
  display: flex;
  gap: var(--spacing-md);
  align-items: center;
  margin-bottom: var(--spacing-md);
  padding-bottom: var(--spacing-md);
  border-bottom: 1px solid var(--color-border);
}

.modal-number {
  font-size: 14px;
  font-weight: 500;
  color: var(--color-text-light);
  letter-spacing: 2px;
}

.modal-category {
  font-size: 13px;
  color: var(--color-text-light);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.modal-title {
  font-size: clamp(32px, 4vw, 48px);
  font-weight: 400;
  color: var(--color-text-title);
  line-height: 1.2;
  margin-bottom: var(--spacing-xs);
}

.modal-location {
  font-size: 16px;
  color: var(--color-text-light);
  margin-bottom: var(--spacing-lg);
}

.modal-divider {
  width: 60px;
  height: 1px;
  background-color: var(--color-text-title);
  margin: var(--spacing-xl) 0;
}

.modal-story {
  flex: 1;
}

.story-intro {
  margin-bottom: var(--spacing-xl);
  padding-bottom: var(--spacing-xl);
  border-bottom: 1px solid rgba(107, 107, 107, 0.15);
}

.story-lead {
  font-size: 18px;
  line-height: 1.7;
  color: var(--color-text-title);
  font-weight: 400;
  margin: 0;
  font-style: italic;
}

.story-title {
  font-size: 12px;
  font-weight: 600;
  color: var(--color-text-title);
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-bottom: var(--spacing-md);
  margin-top: var(--spacing-2xl);
  position: relative;
  padding-left: 16px;
}

.story-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 3px;
  height: 12px;
  background-color: var(--color-text-title);
}

.story-title:first-child {
  margin-top: 0;
}

.story-text {
  font-size: 15px;
  line-height: 1.9;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-md);
}

.story-details {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-md);
  margin-top: var(--spacing-xl);
  padding-top: var(--spacing-xl);
  border-top: 1px solid var(--color-border);
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.detail-label {
  font-size: 12px;
  color: var(--color-text-light);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.detail-value {
  font-size: 18px;
  color: var(--color-text-title);
  font-weight: 500;
}

/* Modal de equipo */
.modal-team .modal-body {
  grid-template-columns: 400px 1fr;
}

.modal-visual-team {
  background: linear-gradient(135deg, #8B8986 0%, #6B6B6B 100%);
}

.modal-photo-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #6B6B6B 0%, #4A4745 100%);
  position: relative;
}

.modal-photo-placeholder::after {
  content: 'Foto del equipo';
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 14px;
  letter-spacing: 1px;
  text-transform: uppercase;
}

.modal-role {
  font-size: 16px;
  color: var(--color-text-light);
  margin-bottom: var(--spacing-lg);
  font-style: italic;
}

.story-contact {
  margin-top: var(--spacing-2xl);
  padding: var(--spacing-lg);
  background-color: var(--color-bg-alternate);
  border-left: 2px solid var(--color-text-title);
}

.contact-text {
  font-size: 14px;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-sm);
}

.contact-link {
  display: inline-block;
  color: var(--color-text-title);
  font-weight: 500;
  font-size: 16px;
  text-decoration: none;
  padding: 8px 0;
  border-bottom: 1px solid var(--color-text-title);
  transition: var(--transition-fast);
}

.contact-link:hover {
  padding-left: 8px;
  opacity: 0.7;
}

/* Nuevos elementos del modal */
.story-services,
.story-expertise {
  margin-top: var(--spacing-2xl);
  padding: var(--spacing-lg);
  background-color: rgba(245, 243, 240, 0.5);
  border-left: 2px solid var(--color-text-title);
}

.services-title,
.expertise-title {
  font-size: 12px;
  font-weight: 600;
  color: var(--color-text-title);
  text-transform: uppercase;
  letter-spacing: 1.5px;
  margin-bottom: var(--spacing-md);
}

.services-list,
.expertise-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.services-list li,
.expertise-list li {
  font-size: 15px;
  line-height: 1.8;
  color: var(--color-text-primary);
  padding-left: 20px;
  position: relative;
  margin-bottom: 8px;
}

.services-list li::before,
.expertise-list li::before {
  content: '—';
  position: absolute;
  left: 0;
  color: var(--color-text-light);
}

.story-cta {
  margin-top: var(--spacing-2xl);
  padding-top: var(--spacing-2xl);
  border-top: 1px solid var(--color-border);
  text-align: center;
}

.cta-text {
  font-size: 16px;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-md);
}

.cta-button {
  display: inline-block;
  padding: 16px 32px;
  background-color: var(--color-text-title);
  color: var(--color-bg-warm);
  text-decoration: none;
  font-size: 14px;
  font-weight: 500;
  letter-spacing: 1px;
  text-transform: uppercase;
  transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
  border: 1px solid var(--color-text-title);
  cursor: pointer;
  font-family: var(--font-family);
}

.cta-button:hover {
  background-color: transparent;
  color: var(--color-text-title);
  transform: translateY(-2px);
}

.contact-button {
  display: inline-block;
  cursor: pointer;
  font-family: var(--font-family);
  background: transparent;
}

.contact-subtext {
  font-size: 14px;
  color: var(--color-text-light);
  margin-bottom: var(--spacing-sm);
  line-height: 1.6;
}

/* Responsive de modales */
@media (max-width: 1024px) {
  .modal-body {
    grid-template-columns: 1fr;
  }
  
  .modal-visual {
    min-height: 400px;
  }
  
  .modal-team .modal-body {
    grid-template-columns: 1fr;
  }
  
  .modal-info {
    padding: var(--spacing-xl);
  }
  
  .story-details {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .modal-overlay {
    padding: var(--spacing-md);
  }
  
  .modal-content {
    max-height: 85vh;
  }
  
  .modal-close {
    top: var(--spacing-md);
    right: var(--spacing-md);
    padding: 10px 18px;
    font-size: 13px;
  }
  
  .modal-title {
    font-size: 32px;
  }
  
  .modal-info {
    padding: var(--spacing-lg);
  }
  
  .story-text {
    font-size: 15px;
  }
}

/* Mobile */
@media (max-width: 480px) {
  :root {
    --font-size-2xl: 24px;
    --font-size-3xl: 28px;
    --font-size-4xl: 36px;
    --container-padding: 20px;
  }
  
  .hero {
    padding: var(--spacing-2xl) var(--container-padding) var(--spacing-xl);
  }
  
  section {
    padding: var(--spacing-2xl) 0;
  }
  
  .section-title {
    font-size: var(--font-size-2xl);
  }
}
